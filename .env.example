# Push Server Environment Configuration
# Copy to .env and fill in values. Never commit .env.

# SQLite database path (shared between Elixir and Node.js)
DB_PATH=/data/push_server.db

# Elixir HTTP port (internal)
PORT=4000

# Node.js fallback port (internal)
FALLBACK_PORT=3000

# External listen port for nginx (mapped in docker-compose)
LISTEN_PORT=8080

# VAPID keys â€” generate once:
#   npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:you@example.com

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_ENVIRONMENT=production
